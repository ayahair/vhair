<ul class="nav nav-tabs" id="r-languages">
	{% for language in languages %} 
		<li><a href="#r-language{{ language['language_id'] }}" data-toggle="tab">{{ language['name'] }}</a></li>
	{% endfor %} 
</ul>

<div class="tab-content"> <!-- language tab content -->
	{% for language in languages %} 
		<div class="tab-pane" id="r-language{{ language['language_id'] }}">	
		<table class="table table-bordered table-hover">
		<thead>
			<tr>
			<td width="1" style="text-align: center;"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></td>
			<td class="text-left">Routes</td>
			<td class="text-left">Keyword</td>
			<td class="text-right">Date Added</td>
		  </tr>
		</thead>
		<tbody>
			{% if (records) %} 
			{% for record in records[language['language_id']] %} 
			<tr>
			<td style="text-align: center;"><input type="checkbox" name="selected[]" value="{{ record['id'] }}" /></td>
			<td class="text-left">{{ record['route'] }} </td>
			<td class="text-left">{{ record['keyword'] }} </td>
			<td class="text-right">{{ record['date_added'] }}</td>
			</tr>
			{% endfor %}<!--endfor-->
			{% else %} 
			<tr><td class="text-center" colspan="4">No Records Found</td></tr>
			{% endif %}	<!--endif-->
		</tbody>
		</table>
		</div>
	{% endfor %}	<!--endfor-->
	</div> <!-- language tab content end-->	
<script type="text/javascript"><!--
$('#r-languages a:first').tab('show');
//--></script>

